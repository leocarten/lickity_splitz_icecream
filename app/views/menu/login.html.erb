          </div>

          <div class="py-0">
            <%= f.label :last_name, class: 'block text-gray-600 text-sm font-bold mb-2' %>
            <%= f.text_field :last_name, class: 'w-full p-2 rounded border focus:outline-none focus:ring focus:border-blue-300' %>
          </div>

          <div class="py-0">
            <%= f.label :phone_number, class: 'block text-gray-600 text-sm font-bold mb-2' %>
            <%= f.text_field :phone_number, class: 'w-full p-2 rounded border focus:outline-none focus:ring focus:border-blue-300' %>
          </div>

          <div class="py-4">
            <%= f.submit 'Submit', class: 'text-white font-bold py-2 px-4 rounded custom-bg-color' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

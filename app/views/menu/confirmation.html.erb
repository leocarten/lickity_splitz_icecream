<div class="mt-6 max-w-md mx-auto bg-white rounded-xl shadow-md overflow-hidden md:max-w-2xl">
  <div class="md:flex">
    <div class="md:shrink-0">
    </div>
    <div class="p-8">
      <div class="uppercase tracking-wide text-lg font-semibold" style="color: #0CC0DF">
        Lickity Splitz 
      </div>
      <% @orders.each do |order| %>
        <% if !distance_of_time_in_words(DateTime.now,order.created_at).include?('day') %>
          <% if order.completed_order < 2 %>
            <h1><strong>Still Working on your order</strong></h1>
            <h3>It shuodnt take too long</h3>
          <% else %>
            <h1><strong>Your order is done</strong></h1>
            <h3>You may come pick it up :I</h3>
          <% end %>
          <h1>Order Id: <%= order.order_id %> </h1>
        <% end %>
      <% end %>
      <div class="typing-container">
          <p class="block mt-0 text-lg leading-tight font-medium text-black hover:underline">
              <span style="font-weight: bold;" id="typing-text"></span>
          </p>
      </div>
    </div>
  </div>
</div>
